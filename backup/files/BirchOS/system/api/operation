function performance_Test(num) -- performance test
	while(1) do
	num = num + 1
	print(num)
	--settings.setVariable("system/settings","count",num)
	if num >= 10000 then
		print("Performance test successful.")
		print("AUTOMATIC REBOOT IN 10 SECONDS")
		sleep(10)
		os.reboot()
		break
	end
	end
end
